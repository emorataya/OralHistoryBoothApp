<Page
    x:Class="OralHistoryBoothApp.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OralHistoryBoothApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Text="Log in" HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="50" TextAlignment="Center"/>
        <Button Name="GuestBtn" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="60" FontSize="30" Click="GuestBtn_Click"> Guest </Button>
        <Button Name="AdminBtn"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="60" FontSize="30" Margin="0,200,0,0" Click="AdminBtn_Click">Admin</Button>

    </Grid>
</Page>
