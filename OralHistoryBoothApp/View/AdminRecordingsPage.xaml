<Page
    x:Class="OralHistoryBoothApp.View.AdminRecordingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OralHistoryBoothApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListView x:Name="MP3ListView" SelectionChanged="MP3ListView_SelectionChanged" />
            <Button Name="DeleteSelectedBtn" Click="DeleteSelectedBtn_Click"> Delete </Button>
            <Button Name="PlayBtn" HorizontalAlignment="Center" Click="PlayBtn_Click">Play</Button>
            <TextBlock FontSize="60" Name="DisplayTagsText"> </TextBlock>

        </StackPanel>
    </Grid>
</Page>
